<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:importantForAutofill="auto"
    android:layout_margin="5dp"
    app:ignore="NamespaceTypo">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/item_card"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:id="@+id/amount_title"
                    android:textAllCaps="true"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:layout_alignBaseline="@+id/amount"
                    android:layout_toLeftOf="@+id/amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000"
                    android:id="@+id/amount"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"/>


            </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a1a1a1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:maxLines="2"
                android:textSize="12dp"
                android:id="@+id/description"
                android:layout_marginTop="5dp"
                android:text="Paid for purchase  d fdf d dof chicken items from B.K Store Mogral, Purchased grocerry items from adhlachaas shop"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:textColor="#a1a1a1"
                android:id="@+id/date_title"
                android:textSize="10sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21/12/2018"
                android:id="@+id/date"
                android:textColor="#a1a1a1"

                android:layout_alignBaseline="@+id/date_title"
                android:layout_toEndOf="@+id/date_title"
                android:layout_marginTop="20dp"
                android:textSize="10sp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bill_no_title"
                    android:textSize="10sp"
                    android:textColor="#a1a1a1"

                    android:layout_alignBaseline="@+id/bill_no"
                    android:layout_toLeftOf="@+id/bill_no"
                    android:text="Bill No: "/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123454"
                    android:textSize="10sp"
                    android:textColor="#a1a1a1"

                    android:id="@+id/bill_no"
                    android:layout_alignParentEnd="true"/>


            </RelativeLayout>




        </LinearLayout>






    </android.support.v7.widget.CardView>



</RelativeLayout>