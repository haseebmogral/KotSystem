<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/emp_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/emp_id"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/emp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/open_sans_light"
                android:maxLines="2"
                android:textSize="16sp"
                android:textStyle="bold" />


                <TextView
                    android:id="@+id/emp_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/online_icon"
                    android:fontFamily="@font/open_sans_light"
                    android:maxLines="2"
                    android:text="Active"

                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:background="#ddd" />


            <TextView
                android:id="@+id/emp_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:drawablePadding="5dp"


                android:fontFamily="@font/montserrat"
                android:maxLines="2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/emp_desig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_case"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat"
                android:maxLines="2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/emp_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_wallet"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat"
                android:maxLines="2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/employ_doj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/ic_icon"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat"
                android:maxLines="2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/emp_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:autoLink="phone"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat"
                android:maxLines="1"
                android:textSize="15sp" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

